public class Second_Eiler {

	public static void main(String[] args) {
		int sum = 0;
		int n0 = 1;
		int n1 = 1;
		int n2=0;
		while (n2<4000000) {
			
				n2= n0+n1;
				n0 = n1;
				n1 = n2;
				if (n2%2 == 0) { sum = sum + n2; 
			
				//System.out.println(sum);
				}
		}
		System.out.println(sum);
	}

}
